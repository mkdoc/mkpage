{
  "name": "mkpage",
  "version": "1.0.0",
  "description": "Convert markdown to an HTML page",
  "author": "muji",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mkdoc/mkpage.git"
  },
  "bugs": {
    "url": "https://github.com/mkdoc/mkpage/issues"
  },
  "keywords": [
    "markdown",
    "commonmark",
    "ast",
    "transform",
    "stream",
    "html",
    "page"
  ],
  "dependencies": {
    "mkast": "~1.2.2",
    "through3": "~1.1.5"
  },
  "devDependencies": {
    "chai": "~3.5.0",
    "coveralls": "~2.11.8",
    "istanbul": "~0.4.2",
    "mocha": "~2.4.5"
  },
  "scripts": {
    "lint": "jshint . && jscs .",
    "clean": "rm -rf coverage",
    "pretest": "rm -rf target && mkdir target",
    "test": "NODE_ENV=test mocha ${SPEC:-test/spec}",
    "precover": "npm run pretest",
    "cover": "NODE_ENV=test istanbul cover _mocha -- ${SPEC:-test/spec}",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  }
}
